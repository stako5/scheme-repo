# Server Configuration
PORT=3000
NODE_ENV=development

# Client Configuration
CLIENT_URL=http://localhost:5173

# Database Configuration
DB_PATH=./data/schema_designer.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# AI Configuration (for future AI service integration)
AI_SERVICE_URL=
AI_API_KEY=
AI_MODEL=gpt-3.5-turbo

# Email Configuration (for future email features)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@schema-designer.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Redis Configuration (for session storage in production)
REDIS_URL=redis://localhost:6379

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_COLLABORATION=true
ENABLE_TEMPLATES=true
ENABLE_EXPORT=true

# Application Metadata
APP_NAME=Schema Designer
APP_VERSION=1.0.0
APP_DESCRIPTION=Modern Database Schema Designer with AI Assistant